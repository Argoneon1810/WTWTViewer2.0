<resources>
    <!-- Base application theme. -->
    <style name="Theme.WTWTViewer20" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="TextColorPrimaryInverseThemed">?android:textColorPrimaryInverse</item>
        <item name="BackgroundDimmed">@color/litegrey</item>
        <item name="ButtonFocusedForegroundTransparent">@color/teal_200_alpha</item>
        <item name="CardBackground">@color/cardview_light_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.WTWTViewer20.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WTWTViewer20.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WTWTViewer20.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>